+import * as React from 'react'
+import { Dialog, DialogContent, DialogFooter } from '../dialog'
+import { Repository } from '../../models/repository'
+import { Dispatcher } from '../dispatcher'
+import { Row } from '../lib/row'
+import { OkCancelButtonGroup } from '../dialog/ok-cancel-button-group'
+
+interface INestedRepoDialogProps {
+  readonly repository: Repository
+  readonly dispatcher: Dispatcher
+  readonly nestedRepoPath: string
+  readonly onDismissed: () => void
+}
+
+interface INestedRepoDialogState {
+  readonly isAddingRepository: boolean
+}
+
+/**
+ * Dialog shown when double-clicking an untracked directory that contains
+ * a git repository, offering to add it to GitHub Desktop.
+ */
+export class NestedRepoDialog extends React.Component<
+  INestedRepoDialogProps,
+  INestedRepoDialogState
+> {
+  public constructor(props: INestedRepoDialogProps) {
+    super(props)
+    this.state = { isAddingRepository: false }
+  }
+
+  public render() {
+    const { isAddingRepository } = this.state
+    const { nestedRepoPath } = this.props
+
+    return (
+      <Dialog
+        id="nested-repo"
+        title={__DARWIN__ ? 'Repository Found' : 'Repository found'}
+        onDismissed={this.props.onDismissed}
+        onSubmit={this.onAddToDesktop}
+        loading={isAddingRepository}
+        disabled={isAddingRepository}
+        type="normal"
+      >
+        <DialogContent>
+          <Row>
+            <p>This folder contains a git repository:</p>
+          </Row>
+          <Row>
+            <code className="nested-repo-path">{nestedRepoPath}</code>
+          </Row>
+          <Row>
+            <p>Would you like to add it to GitHub Desktop?</p>
+          </Row>
+        </DialogContent>
+        <DialogFooter>
+          <OkCancelButtonGroup
+            okButtonText={
+              __DARWIN__ ? 'Add to GitHub Desktop' : 'Add to GitHub Desktop'
+            }
+            cancelButtonText={__DARWIN__ ? 'Cancel' : 'Cancel'}
+          />
+        </DialogFooter>
+      </Dialog>
+    )
+  }
+
+  private onAddToDesktop = async () => {
+    const { dispatcher, nestedRepoPath, onDismissed } = this.props
+
+    this.setState({ isAddingRepository: true })
+
+    try {
+      const repositories = await dispatcher.addRepositories([nestedRepoPath])
+      if (repositories.length > 0) {
+        dispatcher.selectRepository(repositories[0])
+      }
+    } finally {
+      this.setState({ isAddingRepository: false })
+      onDismissed()
+    }
+  }
+}
