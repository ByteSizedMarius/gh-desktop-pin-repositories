+import * as Path from 'path'
+import * as FSE from 'fs-extra'
+
+/**
+ * Check if a path contains a git repository (has .git directory or file).
+ * Used to detect untracked directories that are git repos (not declared submodules).
+ */
+export async function isNestedGitRepository(fullPath: string): Promise<boolean> {
+  try {
+    const stat = await FSE.stat(fullPath)
+    if (!stat.isDirectory()) {
+      return false
+    }
+
+    const gitPath = Path.join(fullPath, '.git')
+    const gitExists = await FSE.pathExists(gitPath)
+    return gitExists
+  } catch {
+    return false
+  }
+}
