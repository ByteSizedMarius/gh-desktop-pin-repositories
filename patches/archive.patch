+import * as LocalStorage from '../local-storage'
+import { Repository } from '../../models/repository'
+
+/** Storage key */
+export const ArchivedRepositoriesKey = 'archived-repositories'
+
+/**
+ * Get list of archived repo IDs
+ */
+export function getArchivedRepositories(): ReadonlyArray<number> {
+  return LocalStorage.getNumberArray(ArchivedRepositoriesKey)
+}
+
+/**
+ * Store list of archived repo IDs
+ */
+export function setArchivedRepositories(
+  repositories: ReadonlyArray<number>
+): void {
+  LocalStorage.setNumberArray(ArchivedRepositoriesKey, repositories)
+}
+
+/**
+ * Add repo to archived list
+ */
+export function addArchivedRepository(repository: Repository): void {
+  const archivedRepositories = getArchivedRepositories()
+  if (archivedRepositories.includes(repository.id)) {
+    return
+  }
+
+  const updatedArchivedRepositories = [...archivedRepositories, repository.id]
+  setArchivedRepositories(updatedArchivedRepositories)
+}
+
+/**
+ * Remove a repo from archived list
+ */
+export function removeArchivedRepository(repository: Repository): void {
+  const archivedRepositories = getArchivedRepositories()
+  if (!archivedRepositories.includes(repository.id)) {
+    return
+  }
+
+  const updatedArchivedRepositories = archivedRepositories.filter(
+    id => id !== repository.id
+  )
+  setArchivedRepositories(updatedArchivedRepositories)
+}
+
+/**
+ * Check if repo is archived
+ */
+export function isRepositoryArchived(repository: Repository): boolean {
+  const archivedRepositories = getArchivedRepositories()
+  return archivedRepositories.includes(repository.id)
+}
