+export function makeArchivedRepositoriesGroup(
+  repositories: ReadonlyArray<Repositoryish>,
+  archivedRepositoryIds: ReadonlyArray<number>,
+  localRepositoryStateLookup: ReadonlyMap<number, ILocalRepositoryState>
+): IFilterListGroup<IRepositoryListItem, RepositoryListGroup> | null {
+  const archivedRepos = repositories.filter(r =>
+    archivedRepositoryIds.includes(r.id)
+  )
+  if (archivedRepos.length === 0) {
+    return null
+  }
+
+  const group: RepositoryListGroup = { kind: 'archive' }
+  const items: IRepositoryListItem[] = archivedRepos
+    .map(r => {
+      const repoState = localRepositoryStateLookup.get(r.id)
+      const title = r instanceof Repository && r.alias != null ? r.alias : r.name
+      return {
+        text: r instanceof Repository ? [title, nameOf(r)] : [title],
+        id: r.id.toString(),
+        repository: r,
+        needsDisambiguation: false,
+        aheadBehind: repoState?.aheadBehind ?? null,
+        changedFilesCount: repoState?.changedFilesCount ?? 0,
+      }
+    })
+    .sort(({ repository: x }, { repository: y }) => {
+      const xTitle = x instanceof Repository && x.alias != null ? x.alias : x.name
+      const yTitle = y instanceof Repository && y.alias != null ? y.alias : y.name
+      return caseInsensitiveCompare(xTitle, yTitle)
+    })
+
+  return { identifier: group, items }
+}
