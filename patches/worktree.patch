+import * as React from 'react'
+import { Dialog, DialogContent, DialogFooter } from '../dialog'
+import { Repository } from '../../models/repository'
+import { Dispatcher } from '../dispatcher'
+import { Row } from '../lib/row'
+import { OkCancelButtonGroup } from '../dialog/ok-cancel-button-group'
+
+interface IBranchInWorktreeDialogProps {
+  readonly repository: Repository
+  readonly dispatcher: Dispatcher
+  readonly branchName: string
+  readonly worktreePath: string
+  readonly onDismissed: () => void
+}
+
+interface IBranchInWorktreeDialogState {
+  readonly isAddingRepository: boolean
+}
+
+/**
+ * Dialog shown when attempting to checkout a branch that is already
+ * checked out in another worktree.
+ */
+export class BranchInWorktreeDialog extends React.Component<
+  IBranchInWorktreeDialogProps,
+  IBranchInWorktreeDialogState
+> {
+  public constructor(props: IBranchInWorktreeDialogProps) {
+    super(props)
+    this.state = { isAddingRepository: false }
+  }
+
+  public render() {
+    const { isAddingRepository } = this.state
+    const { branchName, worktreePath } = this.props
+
+    return (
+      <Dialog
+        id="branch-in-worktree"
+        title={__DARWIN__ ? 'Branch in Use' : 'Branch in use'}
+        onDismissed={this.props.onDismissed}
+        onSubmit={this.onAddToDesktop}
+        loading={isAddingRepository}
+        disabled={isAddingRepository}
+        type="normal"
+      >
+        <DialogContent>
+          <Row>
+            <p>
+              The branch <strong>{branchName}</strong> is already checked out in
+              a worktree at:
+            </p>
+          </Row>
+          <Row>
+            <code className="worktree-path">{worktreePath}</code>
+          </Row>
+          <Row>
+            <p>
+              Would you like to add that worktree to GitHub Desktop so you can
+              work on it there?
+            </p>
+          </Row>
+        </DialogContent>
+        <DialogFooter>
+          <OkCancelButtonGroup
+            okButtonText={
+              __DARWIN__ ? 'Add to GitHub Desktop' : 'Add to GitHub Desktop'
+            }
+            cancelButtonText={__DARWIN__ ? 'Cancel' : 'Cancel'}
+          />
+        </DialogFooter>
+      </Dialog>
+    )
+  }
+
+  private onAddToDesktop = async () => {
+    const { dispatcher, worktreePath, onDismissed } = this.props
+
+    this.setState({ isAddingRepository: true })
+
+    try {
+      const repositories = await dispatcher.addRepositories([worktreePath])
+      if (repositories.length > 0) {
+        dispatcher.selectRepository(repositories[0])
+      }
+    } finally {
+      this.setState({ isAddingRepository: false })
+      onDismissed()
+    }
+  }
+}
