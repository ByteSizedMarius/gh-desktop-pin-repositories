+import { git } from './core'
+import { Repository } from '../../models/repository'
+
+export interface IWorktree {
+  /** Absolute path to the worktree directory */
+  readonly path: string
+  /** The branch checked out in this worktree, or null if detached HEAD */
+  readonly branch: string | null
+  /** Whether this is the main worktree (the original repo location) */
+  readonly isMain: boolean
+}
+
+/**
+ * Get all worktrees for the repository.
+ *
+ * Parses `git worktree list --porcelain` output which has the format:
+ * ```
+ * worktree /path/to/main
+ * HEAD abc123...
+ * branch refs/heads/main
+ *
+ * worktree /path/to/linked
+ * HEAD def456...
+ * branch refs/heads/feature
+ * ```
+ */
+export async function getWorktrees(
+  repository: Repository
+): Promise<ReadonlyArray<IWorktree>> {
+  const result = await git(
+    ['worktree', 'list', '--porcelain'],
+    repository.path,
+    'getWorktrees'
+  )
+
+  const worktrees: IWorktree[] = []
+  const blocks = result.stdout.split('\n\n').filter(b => b.trim())
+
+  for (const block of blocks) {
+    const lines = block.split('\n')
+    let path: string | null = null
+    let branch: string | null = null
+    let isMain = false
+
+    for (const line of lines) {
+      if (line.startsWith('worktree ')) {
+        path = line.substring('worktree '.length)
+        // First worktree in the list is always the main worktree
+        isMain = worktrees.length === 0
+      } else if (line.startsWith('branch ')) {
+        // branch refs/heads/feature -> feature
+        const ref = line.substring('branch '.length)
+        branch = ref.replace('refs/heads/', '')
+      }
+      // We ignore HEAD and other lines, only care about path and branch
+    }
+
+    if (path !== null) {
+      worktrees.push({ path, branch, isMain })
+    }
+  }
+
+  return worktrees
+}
+
+/**
+ * Find if a branch is checked out in another worktree.
+ *
+ * @returns The worktree path if the branch is checked out elsewhere, null otherwise
+ */
+export async function findWorktreeForBranch(
+  repository: Repository,
+  branchName: string
+): Promise<string | null> {
+  const worktrees = await getWorktrees(repository)
+
+  for (const worktree of worktrees) {
+    // Skip the main worktree (we're trying to checkout FROM somewhere)
+    if (worktree.isMain) {
+      continue
+    }
+
+    if (worktree.branch === branchName) {
+      return worktree.path
+    }
+  }
+
+  return null
+}
